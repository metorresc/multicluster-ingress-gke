# Define PROJECT_ID or get it using the following command "gcloud config get-value project"
export PROJECT_ID=project-id-c420-31337

# Define the Region for GCE Deployment
export REGION=us-central1

# Define the Zone for GCE Deployment
export ZONE=us-central1-a

# Define the Networking configuration for the GCE Deployment
# If you are using the default VPC use the NW_TYPE=default
# export NW_TYPE=default-vpc
# If you are using a Shared VPC use NW_TYPE=shared-vpc
export NW_TYPE=shared-vpc

# Use the following variables only if you use NW_TYPE=shared-vpc
export SHARED_VPC_PROJECT_ID=project-id-shared-vpc-c420-31337

# Configure the existing the VPC NAME (shared or default)
export VPC_NAME=vpc-name

# Configure the existing the SUBNET NAME (shared or default)
export SUBNET_NAME=shared-subnet-id-region-a

# SUBNET CIDR for Firewall Rules and Master Authorized Networks
 export SUBNET_CIDR=10.0.0.0/16

# VPC Secondary Range to be used for PODS
export PODS_SECONDARY_RANGE=shared-subnet-id-region-a

# (Optional) VPC Sencondary Range CIDR to be used for PODS
# In case that you want to create the PODS_SECONDARY_RANGE for your existing VPC
# export PODS_CIDR=10.100.0.0/16

# VPC Secondary Range to be used for Services
export SVCS_SECONDARY_RANGE=shared-subnet-id-region-a

# (Optional) VPC Sencondary Range CIDR to be used for SERVICES
# In case that you want to create the SVCS_SECONDARY_RANGE for your existing VPC
# export SVCS_CIDR=192.168.0.0/24

# Choose your VM Machine Type
export MACHINE_TYPE=e2-standard-8

# Define Service Account Name for GCP IAM
export SERVICE_ACCOUNT=anthos-svc-acct-cluster

# Define Anthos Management Workstation Name
export ANTHOS_WS=anthos-workstation-a

# Define Anthos Cluster Name
export CLUSTER_ID=anthos-cluster-a

# Master Node IPV4 CIDR for Private Endpoint
# Must be a /28 Network
export MNODE_IPV4=172.16.22.0/28

# Private ASN (https://tools.ietf.org/html/rfc6996) for Cloud Router
# Could be between 64512-65534 or 4200000000-4294967294
export ASN_NUMBER=4200031337

# Define Service Account Name for Kubernetes
export K8S_SERVICE_ACCOUNT=anthos-ksa-admin-cluster-a